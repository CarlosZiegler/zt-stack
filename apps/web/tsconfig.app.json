{
  "extends": "@repo/typescript-config/vite.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/style.css",
    "env.ts",
    "../../packages/intl/src/react-i18next.d.ts",
    "../../packages/intl/src/i18next.d.ts",
    "../../packages/features/src/**/*.ts",
    "../../packages/features/src/**/*.tsx"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/features/*": ["../../packages/features/src/*"]
    }
  }
}
