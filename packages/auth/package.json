{
  "name": "@repo/auth",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./client": "./src/client.ts",
    "./server": "./src/server.ts",
    "./auth-types": "./src/auth-types.ts"
  },
  "scripts": {
    "dev": "tsc",
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "generate": "pnpx @better-auth/cli generate --config ./src/better-auth-config-cli.ts --output ../db/src/schemas/auth.ts",
    "migrate": "pnpx @better-auth/cli migrate --config ./src/better-auth-config-cli.ts",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@repo/prettier-config",
  "dependencies": {
    "@better-auth/stripe": "^1.2.0",
    "@repo/db": "workspace:*",
    "@repo/email": "workspace:*",
    "better-auth": "catalog:",
    "stripe": "^17.7.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "rollup-plugin-visualizer": "5.14.0",
    "typescript": "catalog:"
  }
}
